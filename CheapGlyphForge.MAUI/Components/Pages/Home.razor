@page "/"
@using MudBlazor

<PageTitle>CheapGlyphForge</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="pa-6">

    <!-- Hero Section -->
    <MudPaper Class="pa-8 mb-6" Elevation="3">
        <MudStack Spacing="4">
            <MudStack Spacing="2">
                <MudText Typo="Typo.h3" Style="font-weight: 500;">
                    CheapGlyphForge
                </MudText>
                <MudText Typo="Typo.h6" Color="Color.Secondary">
                    Nothing Phone Glyph Development Platform
                </MudText>
            </MudStack>

            <MudText Typo="Typo.body1" Color="Color.Secondary" Style="max-width: 800px;">
                A comprehensive Blazor + .NET Android application for controlling Nothing Phone Glyph Interface and Matrix displays.
                Design, test, and deploy custom LED patterns and animations without hardware conflicts.
            </MudText>

            <MudStack Row="true" Spacing="2" Class="mt-2">
                <MudButton Variant="Variant.Filled"
                           Color="Color.Primary"
                           Size="Size.Large"
                           StartIcon="Icons.Material.Filled.Rocket"
                           Href="/simulator">
                    Get Started
                </MudButton>
                <MudButton Variant="Variant.Outlined"
                           Color="Color.Primary"
                           Size="Size.Large"
                           StartIcon="Icons.Material.Filled.Code"
                           Href="https://github.com/CheapNud/CheapGlyphForge"
                           Target="_blank">
                    View on GitHub
                </MudButton>
            </MudStack>

            <MudDivider Class="my-2" />

            <MudStack Row="true" Spacing="4" Class="flex-wrap">
                <MudStack Row="true" Spacing="1" AlignItems="AlignItems.Center">
                    <MudIcon Icon="Icons.Material.Filled.Lightbulb" Size="Size.Small" Color="Color.Primary" />
                    <MudText Typo="Typo.body2">LED Glyph Control</MudText>
                </MudStack>
                <MudStack Row="true" Spacing="1" AlignItems="AlignItems.Center">
                    <MudIcon Icon="Icons.Material.Filled.GridOn" Size="Size.Small" Color="Color.Primary" />
                    <MudText Typo="Typo.body2">25×25 Matrix Display</MudText>
                </MudStack>
                <MudStack Row="true" Spacing="1" AlignItems="AlignItems.Center">
                    <MudIcon Icon="Icons.Material.Filled.Devices" Size="Size.Small" Color="Color.Primary" />
                    <MudText Typo="Typo.body2">Multi-Device Support</MudText>
                </MudStack>
            </MudStack>
        </MudStack>
    </MudPaper>

    <!-- Key Features -->
    <MudText Typo="Typo.h5" Class="mb-4">Key Features</MudText>

    <MudGrid Spacing="3">
        <MudItem xs="12" md="6">
            <MudPaper Class="pa-4" Elevation="1">
                <MudStack Spacing="2">
                    <MudStack Row="true" Spacing="2" AlignItems="AlignItems.Center">
                        <MudIcon Icon="Icons.Material.Filled.Lightbulb" Color="Color.Primary" Size="Size.Large" />
                        <MudText Typo="Typo.h6">Glyph Interface Control</MudText>
                    </MudStack>
                    <MudText Typo="Typo.body2" Color="Color.Secondary">
                        Control individual LED glyph channels (A-E) with real-time intensity adjustment, animations, and custom patterns.
                        Supports all Nothing Phone models with authentic glyph layouts.
                    </MudText>
                </MudStack>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" md="6">
            <MudPaper Class="pa-4" Elevation="1">
                <MudStack Spacing="2">
                    <MudStack Row="true" Spacing="2" AlignItems="AlignItems.Center">
                        <MudIcon Icon="Icons.Material.Filled.GridOn" Color="Color.Primary" Size="Size.Large" />
                        <MudText Typo="Typo.h6">25×25 LED Matrix</MudText>
                    </MudStack>
                    <MudText Typo="Typo.body2" Color="Color.Secondary">
                        Full pixel-level control over the 625-LED matrix on Phone (3). Draw custom patterns, create animations,
                        and test matrix-based notifications with interactive tools.
                    </MudText>
                </MudStack>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" md="6">
            <MudPaper Class="pa-4" Elevation="1">
                <MudStack Spacing="2">
                    <MudStack Row="true" Spacing="2" AlignItems="AlignItems.Center">
                        <MudIcon Icon="Icons.Material.Filled.ViewModule" Color="Color.Primary" Size="Size.Large" />
                        <MudText Typo="Typo.h6">Unified Simulator</MudText>
                    </MudStack>
                    <MudText Typo="Typo.body2" Color="Color.Secondary">
                        Test and develop glyph patterns and matrix animations in a single interface. Switch between devices
                        seamlessly without hardware conflicts or service restarts.
                    </MudText>
                </MudStack>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" md="6">
            <MudPaper Class="pa-4" Elevation="1">
                <MudStack Spacing="2">
                    <MudStack Row="true" Spacing="2" AlignItems="AlignItems.Center">
                        <MudIcon Icon="Icons.Material.Filled.Devices" Color="Color.Primary" Size="Size.Large" />
                        <MudText Typo="Typo.h6">Multi-Device Support</MudText>
                    </MudStack>
                    <MudText Typo="Typo.body2" Color="Color.Secondary">
                        Support for Phone (1), Phone (2), Phone (2a), Phone (2a) Plus, and Phone (3) with device-specific
                        channel mappings and authentic LED layouts for accurate testing.
                    </MudText>
                </MudStack>
            </MudPaper>
        </MudItem>
    </MudGrid>

    <!-- Technical Information -->
    <MudPaper Class="pa-6 mt-6" Elevation="2">
        <MudText Typo="Typo.h5" Class="mb-4">Technical Stack</MudText>

        <MudGrid Spacing="4">
            <MudItem xs="12" md="6">
                <MudStack Spacing="3">
                    <MudText Typo="Typo.h6">Requirements</MudText>
                    <MudStack Spacing="2">
                        <MudStack Row="true" Spacing="2" AlignItems="AlignItems.Center">
                            <MudIcon Icon="Icons.Material.Filled.PhoneAndroid" Size="Size.Small" Color="Color.Primary" />
                            <MudText Typo="Typo.body2">Nothing Phone with Glyph support</MudText>
                        </MudStack>
                        <MudStack Row="true" Spacing="2" AlignItems="AlignItems.Center">
                            <MudIcon Icon="Icons.Material.Filled.Android" Size="Size.Small" Color="Color.Primary" />
                            <MudText Typo="Typo.body2">Android 14+ (API Level 34)</MudText>
                        </MudStack>
                        <MudStack Row="true" Spacing="2" AlignItems="AlignItems.Center">
                            <MudIcon Icon="Icons.Material.Filled.Code" Size="Size.Small" Color="Color.Primary" />
                            <MudText Typo="Typo.body2">.NET 9.0 Runtime</MudText>
                        </MudStack>
                        <MudStack Row="true" Spacing="2" AlignItems="AlignItems.Center">
                            <MudIcon Icon="Icons.Material.Filled.DeveloperMode" Size="Size.Small" Color="Color.Primary" />
                            <MudText Typo="Typo.body2">Developer Mode enabled</MudText>
                        </MudStack>
                    </MudStack>
                </MudStack>
            </MudItem>

            <MudItem xs="12" md="6">
                <MudStack Spacing="3">
                    <MudText Typo="Typo.h6">Project Architecture</MudText>
                    <MudStack Spacing="2">
                        <MudStack Row="true" Spacing="2" AlignItems="AlignItems.Center">
                            <MudIcon Icon="Icons.Material.Filled.Layers" Size="Size.Small" Color="Color.Primary" />
                            <MudStack Spacing="0">
                                <MudText Typo="Typo.body2">CheapGlyphForge.Core</MudText>
                                <MudText Typo="Typo.caption" Color="Color.Secondary">Platform-agnostic interfaces</MudText>
                            </MudStack>
                        </MudStack>
                        <MudStack Row="true" Spacing="2" AlignItems="AlignItems.Center">
                            <MudIcon Icon="Icons.Material.Filled.Web" Size="Size.Small" Color="Color.Primary" />
                            <MudStack Spacing="0">
                                <MudText Typo="Typo.body2">CheapGlyphForge.MAUI</MudText>
                                <MudText Typo="Typo.caption" Color="Color.Secondary">Blazor Hybrid application</MudText>
                            </MudStack>
                        </MudStack>
                        <MudStack Row="true" Spacing="2" AlignItems="AlignItems.Center">
                            <MudIcon Icon="Icons.Material.Filled.Link" Size="Size.Small" Color="Color.Primary" />
                            <MudStack Spacing="0">
                                <MudText Typo="Typo.body2">GlyphMatrix.Binding</MudText>
                                <MudText Typo="Typo.caption" Color="Color.Secondary">Nothing SDK bindings</MudText>
                            </MudStack>
                        </MudStack>
                    </MudStack>
                </MudStack>
            </MudItem>
        </MudGrid>
    </MudPaper>

    <!-- Call to Action -->
    <MudPaper Class="pa-8 mt-6" Elevation="2">
        <MudStack Spacing="3" AlignItems="AlignItems.Center">
            <MudText Typo="Typo.h5" Align="Align.Center">
                Ready to Start Developing?
            </MudText>
            <MudText Typo="Typo.body1" Align="Align.Center" Color="Color.Secondary" Style="max-width: 600px;">
                Launch the unified simulator to begin designing and testing custom LED patterns and animations for your Nothing Phone
            </MudText>
            <MudStack Row="true" Spacing="2" Class="mt-2">
                <MudButton Variant="Variant.Filled"
                           Color="Color.Primary"
                           Size="Size.Large"
                           StartIcon="Icons.Material.Filled.PlayArrow"
                           Href="/simulator">
                    Open Simulator
                </MudButton>
                <MudButton Variant="Variant.Outlined"
                           Color="Color.Primary"
                           Size="Size.Large"
                           StartIcon="Icons.Material.Filled.Code"
                           Href="https://github.com/CheapNud/CheapGlyphForge"
                           Target="_blank">
                    View on GitHub
                </MudButton>
            </MudStack>
        </MudStack>
    </MudPaper>

    <!-- Footer -->
    <MudStack Spacing="2" AlignItems="AlignItems.Center" Class="mt-8 mb-4">
        <MudAlert Severity="Severity.Info" Dense="true" Class="text-center">
            Work in Progress - This project is in active development
        </MudAlert>
        <MudText Typo="Typo.caption" Color="Color.Secondary" Align="Align.Center">
            Not affiliated with Nothing Technology Limited
        </MudText>
    </MudStack>

</MudContainer>